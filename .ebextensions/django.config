option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: bookstore.wsgi:application

container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && /var/app/current/manage.py migrate --noinput"
    leader_only: true
  02_collectstatic:
    command: "source /var/app/venv/*/bin/activate && /var/app/current/manage.py collectstatic --noinput"
